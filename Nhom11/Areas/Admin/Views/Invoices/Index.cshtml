@model IEnumerable<Invoice>
@{
    Layout = "_LayoutIndex";
}
<form asp-controller="Accounts">
       <a asp-action="Create" class="btn btn-success">Add Invoice</a>
    <table class="table table-light">
        <thead class="table table-dark">
            <tr>
                <th>Code</th>
                 <th>AccountID</th>
                  <th>IssuedDate</th>
                   <th>ShippingAddress</th>
                    <th>ShippingPhone</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Function</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Code</td>
                <td>@item.AccountId</td>
                <td>@item.IssuedDate</td>
                <td>@item.ShippingAddress</td>
                <td>@item.ShippingPhone</td>
                <td>@item.Total.ToString("#,##0")</td>
                <td>@item.Status</td>

                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">&times;</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
                

            </tr>
            }
        </tbody>
    </table>
</form>