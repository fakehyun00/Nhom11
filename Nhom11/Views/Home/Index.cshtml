@model IEnumerable<Product>
@{
    Layout = "_LayoutProduct";
}

<div class="row isotope-grid">
@foreach(var item in Model)
{
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2-pic hov-img0">
						<a asp-action="Detail" asp-route-id="@item.Id">	<img src="images/@item.Image" alt="IMG-PRODUCT">
						</a>
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">

							@{
								<a asp-area="" asp-controller="Products" asp-route-id="" asp-action="Detail" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									@item.Name
								</a>
								}
								<span class="stext-105 cl3">
									@item.Price.ToString("#,##0")
									<span>VND</span>
									
								</span>
								<span class="stext-105 cl3">
									@item.Stock
									<span>Stock</span>
								</span>
							</div>

							<div class="block2-txt-child2 flex-r p-t-3">
								<a asp-action="Detail" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
								<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
									<a asp-controller="Carts" asp-action="Index" class="zmdi zmdi-shopping-cart">
										
									</a>
								</div>
								</a>
							</div>
						</div>
					</div>
				</div>
}
</div>
