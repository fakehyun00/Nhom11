@model Product
@{
    Layout = "_LayoutProductDetail";
}

  	<section class="sec-product-detail bg0 p-t-65 p-b-60">
		<div class="container">
				<div class="col-md-6 col-lg-7 p-b-30">
					<div class="p-l-25 p-r-30 p-lr-0-lg">
						<div class="wrap-slick3 flex-sb flex-w">
							
							<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

							
								
									<div class="wrap-pic-w pos-relative">
										
										<img src="~/images/@Model.Image">
										
										
										<a asp-action="Detail" asp-route-id="@Model.Id" class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" >
										<img src="~/images/@Model.Image"/>
										</a>
										<a>
											<i class="fa fa-expand"></i>
										</a>
										
									</div>
								
							
						</div>
					</div>
				</div>
				</div>
					
			
				
						<h4 class="mtext-105 cl2 js-name-detail p-b-14">
							@Model.Name
						</h4>

						<span class="mtext-106 cl2">
							@Model.Price.ToString("#,##0")
						</span>
						<span class="mtext-106 cl2">
							VND
						</span>
						<p >
							Mô tả sản phẩm:
							
						</p>
						<p >
							- Chất liệu sản phẩm thoáng mát.
							
						</p>
						<p >
							- Thấm hút mồ hôi.
							
						</p>
						<p >
							- Thoải mái vận động.
							
						</p>
						<p >
						Chi tiết chọn Size: 
						</p>
						<p>
							- Size 1: Từ 45 -> 65kg, 1m50 - 1m65
						</p>
						<p>
							- Size 2: Từ 65 -> 73kg, 1m65 - 1m75 
						</p>
						<p>
							- Size 3: Từ 73 -> 80kg, 1m75 - 1m80
						</p>
						<!--  -->


							
								<div class="size-204 flex-w flex-m respon6-next">
									<div class="flex-w flex-l-m-25 p-b-5">Quantity</div>
									<div class="wrap-num-product flex-w m-r-10 m-tb-50">
										
										<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
											<i class="fs-16 zmdi zmdi-minus"></i>
										</div>
										
										<input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="1">

										<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
											<i class="fs-16 zmdi zmdi-plus"></i>
										</div>
										
									</div>
									
										<select name="size">
											<option>Size</option>
												<option value="@Model.Size">1</option>
												<option value="@Model.Size">2</option>
												<option value="@Model.Size">3</option>
										</select>
										<div class="dropDownSelect2"></div>
									
									<form asp-controller="Products" asp-action="Add">
									
									<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
										Add to cart
									</button>
									</form>
								</div>
</section>